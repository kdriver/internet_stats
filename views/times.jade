doctype html

html
  head
    title Times
    script(type='text/javascript' src="zingchart/client/zingchart.min.js")

    script.
       var ping_chartData={ //   PING data
       "type":"line",  // Specify your chart type here.
       "plot":{ 
            "aspect":"spline" 
        },
       "title": {
            "text": "Ping response time in mS"
       },
       "legend": {},
        "scale-y":{
                 "zooming": true
         },
        "scale-x":{
                   "min-value": #{the_time},    /* in Unix time */
                   "step":"hour",                /* in Unix time (or use ZingChart's shortcuts) */
                   "transform":{                /* to convert to a readable format */
                        "type":"date",
                        "all":"%H:%i %d, %M %y"
                    },
                    "zooming": true
       },
       "series":[  // Insert your series data here.
        { "values": [ #{gpings} ], "text": "google.com " },
        { "values": [ #{apings} ] , "text": "apple.com "},
        { "values": [ #{ppings} ] , "text": "plus.net"}
        ]
        };

       var rate_chartData={ //   RATE data
       "type":"line",  // Specify your chart type here.
       "plot":{ 
            "aspect":"spline" 
        },
       "title": {
            "text": "Download speed in Kbytes/s"
       },
       "legend": {},
        "scale-y":{
                 "zooming": true
         },
       "scale-x":{
                   "min-value": #{the_time},    /* in Unix time */
                   "step":"hour",                /* in Unix time (or use ZingChart's shortcuts) */
                   "transform":{                /* to convert to a readable format */
                        "type":"date",
                        "all":"%H:%i %d, %M %y"
                    },
                    "zooming": true
       },
       "series":[  // Insert your series data here.
        { "values": [ #{bradbury_rates} ] , "text": "bradbury"},
        { "values": [ #{plus_rates} ] , "text": "plusnet" } /*        { "values": [ #{imac_rates} ] , "text": "imac "} */
        ]
        };
        /*       s_values=[[#{s_rates[0]}.ts,1]];*/
       s_values=[[0,1]];
       var rate_scatter_chartData={ //   SCATTER data
       "type":"scatter",  // Specify your chart type here.
       "plot":{ 
            "aspect":"spline" 
        },
       "title": {
            "text": "Download speed in Kbytes/s"
       },
       "legend": {},
        "scale-y":{
                 "zooming": true
         },
        "scale-x":{
                    "zooming": true
       },
       "series":[  // Insert your series data here.
                { 
                   "values":  s_values 
                }
        ]
        };
        window.onload=function(){  // Render Method[2]
           zingchart.render({ 
           id:'pingDiv',
           data:ping_chartData,
           height:400,
           width:600
         });
           zingchart.render({ 
           id:'rateDiv',
           data:rate_chartData,
           height:400,
           width:600
         });
           zingchart.render({ 
           id:'scatter',
           data:rate_scatter_chartData,
           height:400,
           width:600
         });
       };
